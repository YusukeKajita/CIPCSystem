<Window x:Class="myparts.DebugLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DebugWindow" Height="300" Width="575" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" WindowStyle="None" Background="#CC000000" AllowsTransparency="True" Opacity="0.75" Foreground="White" BorderBrush="White" BorderThickness="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Border Background="#FF3C3C3C" BorderBrush="White" BorderThickness="0,0,0,5">
            <TextBlock x:Name="TextBlock_title" Text="TERMINAL_LOG"/>
        </Border>
        <ScrollViewer Grid.Row="1" BorderThickness="0">
            <TextBlock x:Name="TextBlock_log" TextWrapping="Wrap" Text=""/>
        </ScrollViewer>
        <Button x:Name="Button_logdelete" Content="ログ消去" Template="{StaticResource ButtonTemplate}" Margin="0,10,10,10" Width="75" Background="#00000000" Foreground="White" BorderBrush="White" Click="Button_logdelete_Click" HorizontalAlignment="Right"/>
    </Grid>
</Window>
